{
  "name": "@teselagen/express-js-microservice-worker",
  "version": "0.0.1",
  "description": "This is microservice worker built using Express JS for webservice communication and Node to run worker processes",
  "license": "MIT",
  "scripts": {
    "start": "(cd build && node src/index.js)",
    "dev-start": "NO_CLEAN=1 RESET_MODULES=1 CAPACITY=2 ./node_modules/.bin/ts-node src/index.ts",
    "start-ui": "yarn swagger && TG_SERVE_CLIENT=1 ./node_modules/.bin/ts-node src/index.ts",
    "build": "yarn clean && tsc && yarn swagger && yarn docs && yarn copy-assets && yarn build-init",
    "clean": "rimraf build",
    "lint": "tslint ./src/**/*.ts ./test/**/*.ts",
    "format": "tsfmt -r",
    "pretest": "cross-env NODE_ENV=test yarn build && yarn lint",
    "test": "jest",
    "build-init": "(cd build && BUILD_INIT=1 node src/index.js)",
    "cover": "jest --coverage",
    "auto-cover": "jest --coverage --watchAll",
    "copy-assets": "yarn copy:public && yarn copy:task-runner-template && yarn copy:docs && yarn copy:task-runner-config",
    "copy:public": "cp -r ./src/public/ ./build/src/public/",
    "copy:task-runner-template": "cp -r ./task-runner-template ./build/task-runner-template",
    "copy:docs": "cp -r ./docs ./build/docs",
    "copy:task-runner-config": "cp ./task-runner.config.json ./build/task-runner.config.json",
    "swagger": "swaggerGen -c ./swagger.config.json",
    "tsc": "tsc",
    "deploy": "yarn && yarn build",
    "docker-build": "sh docker-build.sh",
    "docker-run": "sh docker-run.sh",
    "hk-dev-deploy": "sh util-scripts/deploy-to-heroku-dev.sh",
    "docs": "typedoc --out ./docs/ --name 'TeselaGen Microservice Framework' --readme ./README.MD --module commonjs --target ES6 --includeDeclarations --excludePrivate --excludeExternals ./src"
  },
  "dependencies": {
    "@types/klaw-sync": "^5.0.0",
    "@types/node": "^10.9.4",
    "axios": "^0.18.0",
    "download": "^7.1.0",
    "dumpster": "^0.1.1",
    "fkill": "^5.3.0",
    "form-data": "^2.3.2",
    "fs-extra": "^7.0.0",
    "klaw-sync": "^5.0.0",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "morgan": "^1.9.1",
    "mustache": "^3.0.0",
    "shelljs": "^0.8.2",
    "typescript-ioc": "^1.2.4",
    "typescript-rest": "^1.7.0",
    "typescript-rest-swagger": "^0.0.20",
    "url": "^0.11.0",
    "url-join": "^4.0.0",
    "uuid": "^3.3.2",
    "winston": "^3.1.0",
    "worker-farm": "^1.6.0"
  },
  "devDependencies": {
    "@types/cors": "2.8.4",
    "@types/express": "4.16.0",
    "@types/jest": "^23.3.2",
    "@types/request": "2.47.1",
    "cross-env": "5.2.0",
    "jest": "^23.6.0",
    "request": "2.87.0",
    "rimraf": "2.6.2",
    "source-map-support": "^0.5.9",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typedoc": "^0.12.0",
    "typescript": "^3.9.2",
    "typescript-formatter": "^7.2.2"
  }
}
